{
  "name": "vita-bot",
  "version": "0.1.0",
  "description": "A bot maintaining GitHub projects",
  "dependencies": {
    "simple-git": "^1.107.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.10",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "typescript-formatter": "^7.2.2"
  },
  "author": {
    "name": "Stefan Marr",
    "email": "git@stefan-marr.de"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smarr/vita.git"
  },
  "engines": {
    "node": "^11.2.0"
  },
  "scripts": {
    "postinstall": "npm run compile",
    "compile": "node ./node_modules/typescript/bin/tsc",
    "format": "node ./node_modules/typescript-formatter/bin/tsfmt -r",
    "verifyformat": "node ./node_modules/typescript-formatter/bin/tsfmt --verify",
    "verify": "npm run lint && npm run verifyformat",
    "lint": "node_modules/tslint/bin/tslint -c tslint.json --project tsconfig.json",
    "watch": "node ./node_modules/typescript/bin/tsc -w",
    "test": "node ./node_modules/mocha/bin/mocha -t 10000 -u bdd ./dist/tests/"
  }
}
