{
  "name": "vita-bot",
  "version": "0.1.0",
  "description": "A bot maintaining GitHub projects",
  "dependencies": {
    "@octokit/rest": "18.0.3",
    "body-parser": "1.19.0",
    "bottleneck": "2.19.5",
    "js-yaml": "3.13.1",
    "probot": "9.13.0",
    "rimraf": "3.0.2",
    "simple-git": "2.18.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/bunyan": "1.8.6",
    "@types/express": "4.17.7",
    "@types/chai": "4.2.12",
    "@types/js-yaml": "3.12.5",
    "@types/mocha": "8.0.3",
    "@types/node": "14.6.0",
    "@types/rimraf": "3.0.0",
    "chai": "4.2.0",
    "mocha": "8.1.1",
    "nock": "13.0.4",
    "source-map-support": "0.5.19",
    "tslint": "6.1.3",
    "typescript": "3.9.7",
    "typescript-formatter": "7.2.2"
  },
  "author": {
    "name": "Stefan Marr",
    "email": "git@stefan-marr.de"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smarr/vita.git"
  },
  "engines": {
    "node": "14.6.0"
  },
  "scripts": {
    "postinstall": "npm run compile",
    "start": "probot run ./dist/src/app.js",
    "compile": "tsc",
    "format": "tsfmt -r",
    "verifyformat": "tsfmt --verify",
    "verify": "npm run lint && npm run verifyformat",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "watch": "tsc -w",
    "test": "mocha --require source-map-support/register -t 15000 -u bdd ./dist/tests/"
  },
  "vita-bot": {
    "name": "Vita Bot",
    "email": "vita-bot@stefan-marr.de",
    "userId": "vita-bot",
    "gitUserId": "vita-git-bot",
    "config-branches": [
      "dev",
      "master",
      "release"
    ]
  }
}
