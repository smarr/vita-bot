{
  "name": "vita-bot",
  "version": "0.1.0",
  "description": "A bot maintaining GitHub projects",
  "dependencies": {
    "@octokit/rest": "^15.18.0",
    "body-parser": "^1.18.3",
    "bottleneck": "^2.14.0",
    "js-yaml": "^3.12.0",
    "probot": "^7.4.0",
    "rimraf": "^2.6.2",
    "simple-git": "^1.107.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/bunyan": "^1.8.5",
    "@types/express": "^4.16.0",
    "@types/chai": "^4.1.7",
    "@types/js-yaml": "^3.11.4",
    "@types/mocha": "^5.2.5",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.12.15",
    "@types/rimraf": "^2.0.2",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nock": "^10.0.4",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "typescript-formatter": "^7.2.2"
  },
  "author": {
    "name": "Stefan Marr",
    "email": "git@stefan-marr.de"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smarr/vita.git"
  },
  "engines": {
    "node": "^11.2.0"
  },
  "scripts": {
    "postinstall": "npm run compile",
    "start": "probot run ./dist/src/app.js",
    "compile": "tsc",
    "format": "tsfmt -r",
    "verifyformat": "tsfmt --verify",
    "verify": "npm run lint && npm run verifyformat",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "watch": "tsc -w",
    "test": "mocha -t 15000 -u bdd ./dist/tests/"
  },
  "vita-bot": {
    "name": "Vita Bot",
    "email": "vita-bot@stefan-marr.de",
    "userId": "vita-bot",
    "gitUserId": "vita-git-bot",
    "config-branches": [
      "dev",
      "master",
      "release"
    ]
  }
}
